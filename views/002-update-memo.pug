<div class="modal-content" id="updating-old-memo">
	<div class="modal-header text-center">
		<div id="chosen-color"></div>
		if userMemo.memoid
			span(class="unique-memo" id=`${userMemo.memoid}`)
		<h4 class="modal-title w-100 font-weight-bold">Редагувати нотатку</h4>
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<form method="POST" id="form" class="was-validated">
		<div class="modal-body mx-3">
			if userMemo.memoTitle
				<div class="md-form mb-3">
					<label data-error="wrong" data-success="right" for="memoTitle">Заголовок</label>
					input(type="text" id="memoTitle" class="form-control validate" name="title" required value=`${userMemo.memoTitle}`)
				</div>
			<div class="md-form mb-3">
				<label data-error="wrong" data-success="right" for="memoDescription">Текст замітки</label>
				<textarea type="text" id="memoDescription" class="md-textarea form-control" rows="4" name="description">#{userMemo.memoDescription}</textarea>
			</div>

			<p class="link-heading">Додати лінки</p>
			<div class="memo-links-wrapper">
			if userMemo.memoLinks.length >= 1
				each link, index in userMemo.memoLinks
					<div class="memo-link-item">
						<div class="form-row align-items-center memo-link mt-1">
							<div class="col">
								input(type="url" class="form-control memo-link-href" placeholder="Скопіюйте лінк" name=`memoLinkHref-${index}` value=`${link.link}`)
							</div>
							<div class="col">
								input(type="text" class="form-control memo-link-name" placeholder="Назвіть лінк" name=`memoLinkName-${index}` value=`${link.linkText}`)
							</div>
							<div class="col-1">
								<i class="fas fa-trash memo-link-delete"></i>
							</div>
						</div>
					</div>
			</div>

			<p class="list-heading">Додати список</p>
			<div class="memo-list-wrapper">
			if userMemo.memoList.length >= 1
				each listItem, index in userMemo.memoList
					<div class="memo-list-item">
						<div class="form-row align-items-center memo-link mt-1">
							<div class="col">
								input(type="text" class="form-control memo-list-content" placeholder="Введіть текст" name=`memoListItemContent-${index}` value=`${listItem.listItem}` id=`${listItem.listItemId}` data-checked=`${listItem.listItemStatus}` )
							</div>
							<div class="col-1">
								<i class="fas fa-trash memo-list-delete"></i>
							</div>
						</div>
					</div>
			</div>
			<i class="fas fa-link mt-2 memo-link-show" data-toggle="tooltip" data-placement="right" title="Додати лінки"></i>
			<i class="fas fa-list ml-3 memo-list-show" data-toggle="tooltip" data-placement="right" title="Додати список"></i>
			<i class="fas fa-plus mt-2 memo-link-add" data-toggle="tooltip" data-placement="right" title="Додати лінки"></i>
			<i class="fas fa-plus mt-2 memo-list-add" data-toggle="tooltip" data-placement="right" title="Додати в список"></i>
			<div class="md-form mb-2 mt-3">
				<label data-error="wrong" data-success="right" for="memoDate">Строк</label>
				input(type="date" id="memoDate" class="form-control validate" name="date" value=`${userMemo.memoDate}`)
			</div>
		</div>
		<div class="modal-footer d-flex justify-content-between modal-actions">
			<div class="modal-action-icons">
				<div class="memo-colors-wrapper" id="modal-memo-colors-wrapper">
					<div class="modal-memo-colors">
						input(type="radio" name="ColorGroup" value="memo-red" id="memo-red" class="radios" checked=userMemo.memoColor=="memo-red")
						<label class="memo-red" for="memo-red"><i class="fas fa-check"></i></label>
						input(type="radio" name="ColorGroup" value="memo-green" id="memo-green" class="radios" checked=userMemo.memoColor=="memo-green")
						<label class="memo-green" for="memo-green"><i class="fas fa-check"></i></label>
						input(type="radio" name="ColorGroup" value="memo-orange" id="memo-orange" class="radios" checked=userMemo.memoColor=="memo-orange")
						<label class="memo-orange" for="memo-orange"><i class="fas fa-check"></i></label>
						input(type="radio" name="ColorGroup" value="memo-blue" id="memo-blue" class="radios" checked=userMemo.memoColor=="memo-blue")
						<label class="memo-blue" for="memo-blue"><i class="fas fa-check"></i></label>
						input(type="radio" name="ColorGroup" value="memo-yellow" id="memo-yellow" class="radios" checked=userMemo.memoColor=="memo-yellow")
						<label class="memo-yellow" for="memo-yellow"><i class="fas fa-check"></i></label>
						input(type="radio" name="ColorGroup" value="memo-violet" id="memo-violet" class="radios" checked=userMemo.memoColor=="memo-violet")
						<label class="memo-violet" for="memo-violet"><i class="fas fa-check"></i></label>
						input(type="radio" name="ColorGroup" value="memo-light-blue" id="memo-light-blue" class="radios" checked=userMemo.memoColor=="memo-light-blue")
						<label class="memo-light-blue" for="memo-light-blue"><i class="fas fa-check"></i></label>
						input(type="radio" name="ColorGroup" value="memo-brown" id="memo-brown" class="radios" checked=userMemo.memoColor=="memo-brown")
						<label class="memo-brown" for="memo-brown"><i class="fas fa-check"></i></label>
						input(type="radio" name="ColorGroup" value="memo-white" id="memo-white" class="radios" checked=userMemo.memoColor=="memo-white")
						<label class="memo-white" for="memo-white"><i class="fas fa-check"></i></label>
					</div>
				</div>
				<a href="#" id="change-modal-color"><i class="fas fa-palette"></i></a>
			</div>
			<button type="submit" class="btn btn-success" id="update-memo">Зберегти зміни</button>
		</div>
	</form>
</div>