div(class=`card memo ${userMemo.memoColor}` id=`${userMemo.memoid}` style="min-width: 18rem; max-width: 35rem;")
	if memoImage
		<img class="card-img-top" src="../img/test001.jpg" alt="Card image cap">
	if userMemo.memoTitle
		<div class="card-body">
			<h5 class="card-title">#{userMemo.memoTitle}</h5>
			<p class="card-text">#{userMemo.memoDescription}</p>
		</div>
	if userMemo.memoList.length > 0
		<div class="card-body">
		each listItem in memo.memoList
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
				<label class="form-check-label" for="defaultCheck1"> #{listItem}</label>
			</div>
		</div>
	if userMemo.memoLinks.length > 0
		<div class="card-body card-links-container">
			<h6 class="card-title card-links-heading">Посилання:</h6>
			<ul class="card-links-list">
			each link in memo.memoLinks
				li #[a(href=`${link.link}` target="_blank") #{link.linkText}]
			</ul>
		</div>
	if userMemo.memoDate
		<div class="card-footer memo-date">
			<small>#{userMemo.memoDate}</small>
		</div>
	<div class="card-footer memo-actions-container">
		<ul class="memo-actions-list">
			<li><i class="fas fa-pen"></i></li>
			<li><i class="fas fa-trash-alt"></i></li>
			<li><i class="fas fa-palette"></i></li>
			<li><i class="fas fa-archive"></i></li>
			<li><i class="fas fa-clock"></i></li>
		</ul>
	</div>