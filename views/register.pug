extends layouts/layout.pug

block title
	<title>Memos</title>

block content
	
	<div class="logo">
		<img src="../img/logo.png" alt="Image Not Found" class="logo__img">
	</div>

	<div class="site-description">
		<p> <span class="colored red">Зберігайте </span><span class="colored  blue">яскраві </span> <span class="colored orange">нотатки </span> <span class="colored green">зі смаком </span><span class="colored violet">в надійному місці </span></p>
	</div>

	include messages.pug

	if errors
		each error in errors
			<div class="alert alert-danger"> #{error.msg} </div>


	<form class="registration-form" method="POST" action="/users/register">
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Введіть логін" name="userName" required>
		</div>
		<div class="form-group">
			<input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Введіть email" name="userEmail" required>
		</div>
		<div class="form-group">
			<input type="password" class="form-control" placeholder="Введіть пароль" name="userPassword" id="userPassword" required>
		</div>
		<div class="form-group">
			<input type="password" class="form-control" placeholder="Повторіть пароль" name="userPasswordConfirm" id="userPasswordConfirm" required>
		</div>
		<button class="btn btn-success registration-button" id="registration-button" >Зареєструватись</button>
	</form>

	<a href="/users/login" class="login-link">Увійти</a>

	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="../js/passwordConfirm.js"></script>
