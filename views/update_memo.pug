<div class="container">
	<div class="modal fade" id="update-memo-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header text-center">
					<div id="chosen-color"></div>
					<h4 class="modal-title w-100 font-weight-bold">Редагувати нотатку</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form method="POST" id="update-memo-form" class="was-validated" name="memoUpdateForm">
					<div class="modal-body mx-3">
						if userMemo.memoTitle
							<div class="md-form mb-3">
								<label data-error="wrong" data-success="right" for="memoUpdateTitle">Заголовок</label>
								input(type="text" id="memoUpdateTitle" class="form-control validate" name="updateTitle" required value=`${userMemo.memoTitle}`)
							</div>
						<div class="md-form mb-3">
							<label data-error="wrong" data-success="right" for="memoUpdateDescription">Текст замітки</label>
							<textarea type="text" id="memoUpdateDescription" class="md-textarea form-control" rows="4" name="updateDescription"></textarea>
						</div>

						<p class="link-heading">Додати лінки</p>
						<div class="memo-links-wrapper">
							
						</div>

						<p class="list-heading">Додати список</p>
						<div class="memo-list-wrapper">
							
						</div>
						<i class="fas fa-link mt-2 memo-link-show" data-toggle="tooltip" data-placement="right" title="Додати лінки"></i>
						<i class="fas fa-list ml-3 memo-list-show" data-toggle="tooltip" data-placement="right" title="Додати список"></i>
						<i class="fas fa-plus mt-2 memo-link-add" data-toggle="tooltip" data-placement="right" title="Додати лінки"></i>
						<i class="fas fa-plus mt-2 memo-list-add" data-toggle="tooltip" data-placement="right" title="Додати в список"></i>
						<div class="md-form mb-2 mt-3">
							<label data-error="wrong" data-success="right" for="memoUpdateDate">Строк</label>
							<input type="date" id="memoUpdateDate" class="form-control validate" name="updateDate">
						</div>
					</div>
					<div class="modal-footer d-flex justify-content-between modal-actions">
						<div class="modal-action-icons">
							<div class="memo-colors-wrapper" id="modal-memo-update-colors-wrapper">
								<div class="modal-memo-colors">
									<input type="radio" name="ColorUpdateGroup" value="memo-red" id="memo-update-red" class="radios"/>
									<label class="memo-red" for="memo-update-red"><i class="fas fa-check"></i></label>
									<input type="radio" name="ColorUpdateGroup" value="memo-green" id="memo-update-green" class="radios"/>
									<label class="memo-green" for="memo-update-green"><i class="fas fa-check"></i></label>
									<input type="radio" name="ColorUpdateGroup" value="memo-orange" id="memo-update-orange" class="radios"/>
									<label class="memo-orange" for="memo-update-orange"><i class="fas fa-check"></i></label>
									<input type="radio" name="ColorUpdateGroup" value="memo-blue" id="memo-update-blue" class="radios"/>
									<label class="memo-blue" for="memo-update-blue"><i class="fas fa-check"></i></label>
									<input type="radio" name="ColorUpdateGroup" value="memo-yellow" id="memo-update-yellow" class="radios"/>
									<label class="memo-yellow" for="memo-update-yellow"><i class="fas fa-check"></i></label>
									<input type="radio" name="ColorUpdateGroup" value="memo-violet" id="memo-update-violet" class="radios"/>
									<label class="memo-violet" for="memo-update-violet"><i class="fas fa-check"></i></label>
									<input type="radio" name="ColorUpdateGroup" value="memo-light-blue" id="memo-update-light-blue" class="radios"/>
									<label class="memo-light-blue" for="memo-update-light-blue"><i class="fas fa-check"></i></label>
									<input type="radio" name="ColorUpdateGroup" value="memo-brown" id="memo-update-brown" class="radios"/>
									<label class="memo-brown" for="memo-update-brown"><i class="fas fa-check"></i></label>
									<input type="radio" name="ColorUpdateGroup" value="memo-white" id="memo-update-white" class="radios"/>
									<label class="memo-white" for="memo-update-white"><i class="fas fa-check"></i></label>
								</div>
							</div>
							<a href="#" id="change-modal-update-color"><i class="fas fa-palette"></i></a>
							<a href="#"><i class="fas fa-image"></i></a>
						</div>
						<button type="submit" class="btn btn-success" id="update-memo">Зберегти</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
